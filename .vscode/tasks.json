{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++-7 build active file",
      "command": "/usr/bin/g++-7",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "label": "build cpp",
      "type": "shell",
      "command": "g++",
      "args": [
        "/home/kabakov/dev/programming/cpp/oop/main.cpp",
        "-o",
        "/home/kabakov/dev/programming/cpp/oop/executable"
      ]
    },
    {
      "label": "run cpp",
      "type": "shell",
      "command": "/home/kabakov/dev/programming/cpp/oop/executable",
      "dependsOn": ["build cpp"]
    },
    {
      "label": "build cmake",
      "type": "shell",
      "command": "cmake ..",
      "options": {
        "cwd": "/home/kabakov/dev/programming/cpp/oop/build"
      }
    },
    {
      "label": "make cmake",
      "type": "shell",
      "command": "make -j8",
      "options": {
        "cwd": "/home/kabakov/dev/programming/cpp/oop/build"
      },
      "dependsOn": ["build cmake"]
    },
    {
      "label": "run cmake",
      "type": "shell",
      "command": "./main",
      "options": {
        "cwd": "/home/kabakov/dev/programming/cpp/oop/build"
      },
      "dependsOn": ["make cmake", "clear build"]
    },
    {
      "label": "clear build",
      "type": "shell",
      "command": "mkdir build; cd build; cmake ..; make; ./main; cd ..; rm -r build",
      "options": {
        "cwd": "/home/kabakov/dev/programming/cpp/"
      }
    }
  ]
}
